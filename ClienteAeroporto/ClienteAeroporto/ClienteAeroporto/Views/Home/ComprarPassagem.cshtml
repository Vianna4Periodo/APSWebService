@model ClienteAeroporto.localhost.Passagem

@{
    ViewBag.Title = "Comprar Passagem";
}

<h2>Compra de Passagem</h2>


@using (Html.BeginForm("CompraPassagem", "Home", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Passagem</h4>
        <hr />
        <input type="hidden" name="idvoo" id="idvoo" value="@ViewBag.idvoo" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="form-group">
                @Html.Label("Quantidade de passagem", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("quantidade", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Comprar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar a listagem", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
